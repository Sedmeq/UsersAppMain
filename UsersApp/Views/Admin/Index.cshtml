@model List<UsersApp.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>User Management</h2>
                <div>
                    <a asp-action="CreateUser" class="btn btn-success me-2">
                        <i class="fas fa-user-plus"></i> Create User
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">All Users</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger">@user.Role</span>
                                                }
                                                else if (user.Role == "Accountant")
                                                {
                                                    <span class="badge bg-warning">@user.Role</span>
                                                }
                                                else if (user.Role == "Cashier")
                                                {
                                                    <span class="badge bg-info">@user.Role</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@user.Role</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditUser" asp-route-id="@user.Id"
                                                       class="btn btn-sm btn-outline-primary" title="Edit User">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a asp-action="AssignRole" asp-route-id="@user.Id"
                                                       class="btn btn-sm btn-outline-warning" title="Assign Role">
                                                        <i class="fas fa-user-tag"></i> Role
                                                    </a>
                                                    @if (user.Role != "Admin" || Model.Count(u => u.Role == "Admin") > 1)
                                                    {
                                                        <a asp-action="DeleteUser" asp-route-id="@user.Id"
                                                           class="btn btn-sm btn-outline-danger" title="Delete User">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="text-muted">No users found.</p>
                            <a asp-action="CreateUser" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> Create First User
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>