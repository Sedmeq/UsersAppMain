@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to UsersApp</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <h3>Hello, @User.Identity.Name!</h3>

            @if (User.IsInRole("Admin"))
            {
                <div class="alert alert-info mt-3">
                    <h5><i class="fas fa-crown"></i> Administrator Dashboard</h5>
                    <p>You have full access to manage users and system settings.</p>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-users-cog"></i> Manage Users
                    </a>
                </div>
            }
            else if (User.IsInRole("Accountant"))
            {
                <div class="alert alert-warning mt-3">
                    <h5><i class="fas fa-calculator"></i> Accountant Dashboard</h5>
                    <p>You have access to financial records and accounting features.</p>
                    <button class="btn btn-warning" disabled>
                        <i class="fas fa-chart-line"></i> Financial Reports (Coming Soon)
                    </button>
                </div>
            }
            else if (User.IsInRole("Cashier"))
            {
                <div class="alert alert-info mt-3">
                    <h5><i class="fas fa-cash-register"></i> Cashier Dashboard</h5>
                    <p>You have access to sales and transaction features.</p>
                    <button class="btn btn-info" disabled>
                        <i class="fas fa-shopping-cart"></i> Sales Management (Coming Soon)
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-secondary mt-3">
                    <h5><i class="fas fa-user"></i> User Dashboard</h5>
                    <p>Welcome! You are logged in as a regular user.</p>
                    <p class="text-muted">Contact your administrator to get a role assigned.</p>
                </div>
            }
        </div>
    }
    else
    {
        <div class="mt-4">
            <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
            <div class="mt-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2">Login</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">Register</a>
            </div>
        </div>
    }
</div>

<style>
    .alert i {
        margin-right: 10px;
    }

    .btn i {
        margin-right: 5px;
    }
</style>