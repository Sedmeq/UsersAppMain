@model UsersApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Order Details - #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Order #:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Customer:</dt>
                                <dd class="col-sm-8">@Model.CustomerName</dd>

                                <dt class="col-sm-4">Order Date:</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("MM/dd/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Total Items:</dt>
                                <dd class="col-sm-8">@Model.OrderItems.Sum(oi => oi.Quantity)</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8"><strong>$@Model.TotalAmount.ToString("F2")</strong></dd>
                            </dl>
                        </div>
                    </div>

                    <h5>Order Items</h5>
                    <div class="table-responsive mb-4">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Product</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@(item.Product?.Name ?? "Unknown Product")</td>
                                        <td>$@item.UnitPrice.ToString("F2")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.Subtotal.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th>$@Model.TotalAmount.ToString("F2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-4">
                            <h6>Notes:</h6>
                            <div class="alert alert-light">
                                @Model.Notes
                            </div>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Back to Orders</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>