@model IEnumerable<UsersApp.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Orders</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Order
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order #</th>
                                <th>Customer Name</th>
                                <th>Items</th>
                                <th>Total Items</th>
                                <th>Total Amount</th>
                                <th>Order Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CustomerName</td>
                                    <td>
                                        <div class="small">
                                            @foreach (var orderItem in item.OrderItems.Take(2))
                                            {
                                                <div>@orderItem.ProductName (x@orderItem.Quantity)</div>
                                            }
                                            @if (item.OrderItems.Count > 2)
                                            {
                                                <small class="text-muted">+@(item.OrderItems.Count - 2) more...</small>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.TotalItems</td>
                                    <td>$@item.TotalAmount.ToString("F2")</td>
                                    <td>@item.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>Total Orders: </strong>@Model.Count()
                                </div>
                                <div class="col-md-3">
                                    <strong>Total Revenue: </strong>$@Model.Sum(o => o.TotalAmount).ToString("F2")
                                </div>
                                <div class="col-md-3">
                                    <strong>Total Items Sold: </strong>@Model.Sum(o => o.TotalItems)
                                </div>
                                <div class="col-md-3">
                                    <strong>Average Order: </strong>$@(Model.Any() ? (Model.Sum(o => o.TotalAmount) / Model.Count()).ToString("F2") : "0.00")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>No orders found</h4>
                    <p>There are no orders in the system yet.</p>
                    <a asp-action="Create" class="btn btn-success">Create the first order</a>
                </div>
            }
        </div>
    </div>
</div>