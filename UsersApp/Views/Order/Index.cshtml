@model IEnumerable<UsersApp.ViewModels.MonthlyOrderGroupViewModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Orders</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Order
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Any())
            {
                <!-- Overall Summary -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Overall Summary</h5>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Total Orders: </strong>@Model.Sum(g => g.OrderCount)
                            </div>
                            <div class="col-md-3">
                                <strong>Total Revenue: </strong>$@Model.Sum(g => g.TotalRevenue).ToString("F2")
                            </div>
                            <div class="col-md-3">
                                <strong>Total Items Sold: </strong>@Model.Sum(g => g.TotalItems)
                            </div>
                            <div class="col-md-3">
                                <strong>Average Order: </strong>$@(Model.Sum(g => g.OrderCount) > 0 ? (Model.Sum(g => g.TotalRevenue) / Model.Sum(g => g.OrderCount)).ToString("F2") : "0.00")
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Monthly Groups -->
                @foreach (var monthGroup in Model)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse-@monthGroup.Year-@monthGroup.MonthNumber"
                                            aria-expanded="true">
                                        <i class="fas fa-calendar-alt"></i> @monthGroup.MonthYear
                                    </button>
                                </h5>
                                <div class="text-muted">
                                    <small>
                                        @monthGroup.OrderCount orders |
                                        $@monthGroup.TotalRevenue.ToString("F2") revenue |
                                        @monthGroup.TotalItems items
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div id="collapse-@monthGroup.Year-@monthGroup.MonthNumber" class="collapse show">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Order #</th>
                                                <th>Customer Name</th>
                                                <th>Items</th>
                                                <th>Total Items</th>
                                                <th>Total Amount</th>
                                                <th>Order Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in monthGroup.Orders)
                                            {
                                                <tr>
                                                    <td>@order.Id</td>
                                                    <td>@order.CustomerName</td>
                                                    <td>
                                                        <div class="small">
                                                            @foreach (var orderItem in order.OrderItems.Take(2))
                                                            {
                                                                <div>@orderItem.ProductName (x @orderItem.Quantity)</div>
                                                            }
                                                            @if (order.OrderItems.Count > 2)
                                                            {
                                                                <small class="text-muted">+@(order.OrderItems.Count - 2) more...</small>
                                                            }
                                                        </div>
                                                    </td>
                                                    <td>@order.TotalItems</td>
                                                    <td>$@order.TotalAmount.ToString("F2")</td>
                                                    <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                                                                <i class="fas fa-eye"></i> Details
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>No orders found</h4>
                    <p>There are no orders in the system yet.</p>
                    <a asp-action="Create" class="btn btn-success">Create the first order</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize all collapses as expanded
            $('.collapse').addClass('show');
        });
    </script>
}